{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./build",
    "module": "commonjs",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@config/*": ["src/config/*"],
      "@helpers/*": ["src/helpers/*"],
      "@modules/*": ["src/modules/*"],
      "@utils/*": ["src/utils/*"]
    },
    "alwaysStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
